<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BaseFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="fabColorNormal">?attr/colorAccent</item>
        <item name="fabColorPressed">?attr/colorControlActivated</item>
        <item name="fabColorRipple">?attr/colorControlHighlight</item>
        <item name="fabShadow">@drawable/fab_shadow</item>
    </style>

    <style name="FloatingActionButton" parent="BaseFloatingActionButton" />

    <style name="Widget.Bitbeaker.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="indeterminateProgressStyle">@style/Widget.Bitbeaker.Progressbar</item>
    </style>

    <style name="Widget.Bitbeaker.Progressbar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minHeight">@dimen/indeterminate_progress_size</item>
        <item name="android:layout_height">@dimen/indeterminate_progress_size</item>
        <item name="android:maxHeight">@dimen/indeterminate_progress_size</item>
        <item name="android:minWidth">@dimen/indeterminate_progress_size</item>
        <item name="android:layout_width">@dimen/indeterminate_progress_size</item>
        <item name="android:maxWidth">@dimen/indeterminate_progress_size</item>
    </style>

    <style name="Widget.Bitbeaker.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/query_background</item>
    </style>

    <style name="Widget.Bitbeaker.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="contentInsetStart">@dimen/keyline_content_start</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TextAppearance.Bitbeaker.List.Primary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Bitbeaker.List.Secondary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Bitbeaker.NavigationDrawer" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textSize">14sp</item>
    </style>

</resources>