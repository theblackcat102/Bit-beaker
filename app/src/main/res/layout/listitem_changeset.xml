<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeight"
    >

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/keyline_margin"
        android:layout_marginEnd="@dimen/keyline_margin"
        android:background="@drawable/tag_background"
        android:drawableLeft="@drawable/ic_tag"
        android:drawableStart="@drawable/ic_tag"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/abc_text_size_caption_material"
        android:text="@null"
        android:visibility="gone"
        tools:text="release-v2.5.2"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/keyline_margin"
        android:layout_marginStart="@dimen/keyline_margin"
        android:layout_toLeftOf="@id/tag"
        android:layout_toStartOf="@id/tag"
        android:text="@null"
        android:textAppearance="@style/TextAppearance.Bitbeaker.List.Primary"
        tools:text="Jun 5, 2014 21:50 - Author"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/keyline_margin"
        android:layout_marginRight="@dimen/keyline_margin"
        android:paddingTop="4dp"
        android:maxLines="2"
        android:text="@null"
        android:textAppearance="@style/TextAppearance.Bitbeaker.List.Secondary"
        tools:text="1ab4ed475bd9 | Commit message"/>

</RelativeLayout>
